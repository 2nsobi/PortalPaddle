<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/mobvista_reward_endcard_land_bg"
    android:gravity="center_vertical">


    <!-- 动态计算图片宽高 -->
    <RelativeLayout
        android:id="@+id/mobvista_rl_topcontainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mobvista_iv_adbanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/mobvista_tv_adtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="20"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:text="@string/mobvista_reward_endcard_ad"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/mobvista_view_shadow"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:background="@drawable/mobvista_reward_end_land_shape" />

    <RelativeLayout
        android:id="@+id/mobvista_rl_bodycontainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/mobvista_rl_topcontainer"
        android:background="@color/mobvista_reward_endcard_hor_bg">

        <LinearLayout
            android:id="@+id/mobvista_ll_bottomlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="18dp"
            android:orientation="vertical">

            <View
                android:id="@+id/mobvista_view_bottomline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/mobvista_tv_appdesc"
                android:background="#d8d8d8"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/mobvista_tv_cta"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/mobvista_reward_shape_end_pager"
                android:gravity="center"
                android:text="Install Now"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="54dp"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/mobvista_reward_end_pager_logo" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/mobvista_ll_bottomlayout">

            <ImageView
                android:id="@+id/mobvista_iv_hottag"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/mobvista_reward_activity_ad_end_land_des_rl_hot" />

            <ImageView
                android:id="@+id/mobvista_iv_close"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_margin="9dp"
                android:src="@drawable/mobvista_reward_close" />

            <ImageView
                android:id="@+id/mobvista_iv_iconbg"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:background="@drawable/mobvista_reward_end_shape_oval" />

            <ImageView
                android:id="@+id/mobvista_iv_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignTop="@+id/mobvista_iv_iconbg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/mobvista_tv_apptitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobvista_iv_iconbg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:ellipsize="end"
                android:maxEms="7"
                android:singleLine="true"
                android:text="title"
                android:textColor="@color/mobvista_reward_title_textcolor"
                android:textSize="15sp" />

            <com.mobvista.msdk.videocommon.view.StarLevelView
                android:id="@+id/mobvista_sv_starlevel"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/mobvista_tv_apptitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/mobvista_tv_appdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobvista_sv_starlevel"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:minLines="3"
                android:text="des"
                android:textColor="@color/mobvista_reward_desc_textcolor"
                android:textSize="12sp" />

        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>